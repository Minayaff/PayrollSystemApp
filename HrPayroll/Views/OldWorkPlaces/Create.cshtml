@model HrPayroll.Models.OldWorkPlace

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <!-- Page Header-->
    <div class="page-header no-margin-bottom">
        <div class="container-fluid">
            <h2 class="h5 no-margin-bottom">Old Work Places Form</h2>
        </div>
    </div>

    <!-- Breadcrumb-->
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
        </ul>
    </div>
    <section class="no-padding-top">
        <div class="container-fluid">
            <div class="row">
                <!-- Basic Form-->
                <div class="col-lg-6">
                    <div class="block">
                        <div class="title"><strong class="d-block">Old Work Places List</strong><span class="d-block">All data about employee`s old work place</span></div>
                        <div class="block-body">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FireDate" class="control-label"></label>
                                    <input asp-for="FireDate" class="form-control" />
                                    <span asp-validation-for="FireDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="HireDate" class="control-label"></label>
                                    <input asp-for="HireDate" class="form-control" />
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FireReason" class="control-label"></label>
                                    <input asp-for="FireReason" class="form-control" />
                                    <span asp-validation-for="FireReason" class="text-danger"></span>
                                </div>
                                <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId"/>
                                <div class="form-group">
                                    <label asp-for="Employee.Name" class="control-label"></label>
                                    <input asp-for="Employee.Name" class="form-control" value="@ViewBag.EmployeeName" readonly/>
                                    <span asp-validation-for="Employee.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create"  class="btn btn-primary" style="padding: 0.5rem 5rem; margin-top:2rem"/>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

