@model HrPayroll.Models.Bonus

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="page-content">
        <!-- Page Header-->
        <div class="page-header no-margin-bottom">
            <div class="container-fluid">
                <h2 class="h5 no-margin-bottom">Bonus Form</h2>
            </div>
        </div>

        <!-- Breadcrumb-->
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            </ul>
        </div>
        <section class="no-padding-top">
            <div class="container-fluid">
                <div class="row">
                    <!-- Basic Form-->
                    <div class="col-lg-6">
                        <div class="block">
                            <div class="title"><strong class="d-block">Delete Form</strong><span class="d-block">Delete bonus for employess from system </span></div>
                            <div class="block-body">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Amount)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Amount)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Reason)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Reason)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.IsPayed)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.IsPayed)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Date)
                                    </dd>
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Employee)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.Employee.Name) @Html.DisplayFor(model => model.Employee.Surname)
                                    </dd>
                                </dl>
                                <h3>Are you sure you want to delete this?</h3>
                                <form asp-action="Delete">
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <input asp-action="Delete" asp-controller="Bonuses" type="submit" value="Add" class="btn btn-primary" style="padding: 0.5rem 5rem; margin-top:2rem">
                                    </div>
                                    <a asp-action="Index">Back to List</a>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
