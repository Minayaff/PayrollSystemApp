@model HrPayroll.Models.Salary

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



    <div class="page-content">
        <!-- Page Header-->
        <div class="page-header no-margin-bottom">
            <div class="container-fluid">
                <h2 class="h5 no-margin-bottom">Salary Form</h2>
            </div>
        </div>

        <!-- Breadcrumb-->
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home">Home</a></li>
            </ul>
        </div>
        <section class="no-padding-top">
            <div class="container-fluid">
                <div class="row">
                    <!-- Basic Form-->
                    <div class="col-lg-6">
                        <div class="block">
                            <div class="title"><strong class="d-block">Edit Form</strong><span class="d-block">Edit salary</span></div>
                            <div class="block-body">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Id" />
                                    <div class="form-group">
                                        <label asp-for="Payment" class="control-label"></label>
                                        <input asp-for="Payment" class="form-control" />
                                        <span asp-validation-for="Payment" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Position</label>
                                        <select asp-for="PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                                        <span asp-validation-for="PositionId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Company Name</label>
                                        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-action="Edit" asp-controller="Salaries" type="submit" value="EDIT" class="btn btn-primary" style="padding: 0.5rem 5rem; margin-top:2rem">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

